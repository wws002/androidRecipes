<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/apps"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Starters"                 android:textSize="50dp"
        android:layout_marginTop="65dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/bfast"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Breakfast"                android:textSize="50dp"
        android:layout_marginTop="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/apps" />

    <Button
        android:id="@+id/lnch"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Lunch"                    android:textSize="50dp"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/bfast"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/dnnr"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Dinner"                   android:textSize="50dp"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/lnch"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/dssrts"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Desserts"                 android:textSize="50dp"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/dnnr"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>